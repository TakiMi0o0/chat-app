<div class="chat-header">
  <div class="current-room">Maker's Mark
  </div>
  <div class="end-btn">
    <%= link_to 'チャットを終了する', '/' %>
  </div>
</div>
<div class="talk">
  <div class="message-box">
    <div class="name-at">
      <div class="user-name">Takimi
      </div>
      <div class="create-at">2023/08/18(fri) 18:28:01
      </div>
    </div>
    <div class="message">こんにちは
    </div>
  </div>
</div>
<div class="form-box">
  <%= form_with model: [@room, @message], class: 'form', local:true do |f| %>
    <div class="text-form">
      <%= f.text_field :content, class: 'message-field', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <input type="file" class="hidden">
      </label>
    </div>
    <div class="form-submit">
      <%= f.submit '送信' %>
    </div>
  <% end %>
</div>