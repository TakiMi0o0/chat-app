<div class="message-box">
  <div class="name-at">
    <div class="user-name">
      <%= message.user.name %>
    </div>
    <div class="create-at">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="lower-message">
    <div class="message">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>
</div>